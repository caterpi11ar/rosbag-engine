{
  "compileOnSave": false,
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@rosbag-engine/parser": ["packages/parser/src"],
      "@rosbag-engine/player": ["packages/player/src"],
      "@rosbag-engine/downloader": ["packages/downloader/src"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "build"]
}
